
@page
@model eBookStore.Pages.Account.LoginModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
	<title>Login 04</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	
	<link rel="stylesheet" href="~/css2/style.css" asp-append-version="true" />

</head>
<body>
	<section class="ftco-section">
		<div class="container">

			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img">
							
							
							<img src="~/images/book.png" alt="Italian Trulli">
						
						</div>
						<div class="login-wrap p-4 p-md-5">
							<h3 class="mb-4" style="color: blue;">Book Store Login</h3>

							<form method="post" class="signin-form">
								<div class="form-group mb-3">
									<label class="label" for="name">Email</label>
									<input type="text" name="email" class="form-control" placeholder="Email Address" required>
								</div>
								<div class="form-group mb-3">
									<label class="label" for="password">Password</label>
									<input type="password" name="password" class="form-control" placeholder="Password" required>
								</div>
								@if (TempData["Message"] != null)
								{
									<div class="alert alert-danger">
										@TempData["Message"]
									</div>
								}
								<div class="form-group">
									<button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
								</div>

								<div class="form-group d-md-flex">

									<div class="w-50 text-md-right">
										<a asp-page="/Account/Register" style="color: blue;">Sign up</a>
									</div>
								</div>
							</form>

						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	
	<script src="~/js2/jquery.min.js"></script>
	<script src="~/js2/popper.js"></script>
	<script src="~/js2/bootstrap.min.js"></script>
	<script src="~/js2/main.js"></script>

</body>
</html>

